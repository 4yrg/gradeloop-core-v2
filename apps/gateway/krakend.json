{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "GradeLoop API Gateway",
    "port": 8080,
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "endpoints": [
        {
            "endpoint": "/v1/auth/login",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/auth/login",
                    "method": "POST",
                    "host": [
                        "http://auth-service:8081"
                    ],
                    "disable_host_sanitize": true
                }
            ]
        },
        {
            "endpoint": "/v1/auth/logout",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/auth/logout",
                    "method": "POST",
                    "host": [
                        "http://auth-service:8081"
                    ],
                    "disable_host_sanitize": true
                }
            ]
        },
        {
            "endpoint": "/v1/auth/refresh",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/auth/refresh",
                    "method": "POST",
                    "host": [
                        "http://auth-service:8081"
                    ],
                    "disable_host_sanitize": true
                }
            ]
        },
        {
            "endpoint": "/v1/auth/forgot-password",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/auth/forgot-password",
                    "method": "POST",
                    "host": [
                        "http://auth-service:8081"
                    ],
                    "disable_host_sanitize": true
                }
            ]
        },
        {
            "endpoint": "/v1/auth/reset-password",
            "method": "POST",
            "output_encoding": "json",
            "backend": [
                {
                    "url_pattern": "/api/auth/reset-password",
                    "method": "POST",
                    "host": [
                        "http://auth-service:8081"
                    ],
                    "disable_host_sanitize": true
                }
            ]
        }
    ]
}